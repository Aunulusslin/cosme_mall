/* pages/coupon-detail/coupon-detail.wxss */

page {
  background: #e5e5e5;
}

.contain {
  background: #fff;
  width: 96%;
  border-radius: 20rpx;
  margin-left: 2%;
  margin-top: 20px;
}

.top {
  background: url("http://xcx.carbase.vip/file/upload/20190312165905505813.jpg");
  background-size: 100%;
  width: 100%;
  height: 394rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.headurl {
  width: 100rpx;
  height: 100rpx;
  border-radius: 90rpx;
  margin: 20rpx 20rpx;
  float: left;
}

.store-name {
  font-size: 32rpx;
  line-height: 70rpx;
  display: block;
  color: #fff;
}

.valid-day {
  font-size: 24rpx;
  color: #fff;
}

.value {
  padding-top: 100rpx;
  padding-left: 20rpx;
  color: #fff;
}

.value text:first-child {
  font-size: 28rpx;
  padding-right: 56rpx;
}

.value text:nth-child(2) {
  font-size: 72rpx;
  font-weight: bold;
}

.value text:nth-child(3) {
  font-size: 24rpx;
  display: block;
  padding-top: 38rpx;
}

.center {
  padding: 20rpx 20rpx;
  color: #999;
}

.center text {
  display: block;
}

.center image {
  width: 150rpx;
  height: 150rpx;
  padding: 20rpx 0;
}

.suol {
  height: 64rpx;
  width: 150rpx;
  overflow: hidden;
}

button {
  width: 50%;
  background: #ba352e;
  color: #fff;
  font-size: 32rpx;
}
.slit{
  height: 20rpx;
  background: #f5f5f5;
  margin: 20rpx 0
}
.bottom{
  font-size: 28rpx;
  padding: 10rpx 20rpx
}
.bottom text{
  display: block;
  padding: 15rpx 0
}
