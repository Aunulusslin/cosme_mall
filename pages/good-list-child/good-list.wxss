/* @import '../../common/common.wxss'; */
page{
  padding-bottom: 0
}
.sort-wrap {
  height: 90rpx;
  background-color: #fff;
  border-bottom: 1px solid #f3f3f3;
}

.sort-btn {
  width: 50%;
  float: left;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #333;
}

.sort-btn image {
  width: 25rpx;
  height: 32rpx;
  margin-left: 6rpx;
  position: relative;
  top: 5rpx;
}

.main {
  /* padding-top: 100rpx; */
  background: #f3f3f3
}

.list-box {
  padding: 30rpx 20rpx;
}

.newest-list {
  display: inline-block;
  width: 347rpx;
  height: 522rpx;
  margin: 0 15rpx 20rpx 0;
  text-align: center;
  background: #fff;
}

.newest-list:nth-child(2n) {
  margin-right: 0;
}

.newest-list image {
  width: 100%;
  height: 330rpx;
  /* margin: 0rpx 0 20rpx; */
}

.newest-list .newest-text {
  font-size: 32rpx;
  line-height: 45rpx;
  padding: 10rpx 20rpx;
  text-align: left;
}

.mainno image {
  width: 60%;
  height: 300rpx;
  margin: 0 auto;
  margin-left: 20%;
  margin-top: 92rpx;
}

.mainno > view {
  text-align: center;
  padding: 20rpx;
  font-size: 32rpx;
}
