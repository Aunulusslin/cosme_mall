/* pages/search/search.wxss */
.top{
  display: flex;
  flex-direction: row;
  justify-content: space-around
}
.search-container {
  margin-top: 30rpx;
  width: 580rpx;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50px;
  height: 60rpx;
}


.icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 24rpx;
  margin-right: 16rpx;
}

.bar {
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  display: inline-block;
  height: 68rpx;
  width: 570rpx;
  font-size: 24rpx;
}
.cancel-img {
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}
.tip{
  padding: 30rpx 30rpx;
  color: #666;
  font-size: 28rpx
}
.tip-item{
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 20rpx
}
.tip-item navigator{
  width:154rpx;
  height: 54rpx;
  background: #f6f6f6;
  color: #000;
  font-size: 28rpx;
  line-height: 54rpx;
  text-align: center
}