/* pages/vote/vote.wxss */

page {
  background: #eceff4;
}

.banner {
  height: 360rpx;
  background: url("https://wx1.sinaimg.cn/large/70eb479bly1g0qlzf2waij20j607ogo2.jpg");
  background-size: cover;
}

.banner image {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx 0rpx 10rpx 30rpx;
  display: block;
}

.banner text {
  font-size: 32rpx;
  padding: 0 20rpx;
}

.title {
  text-align: center;
  display: block;
  padding: 20rpx 0;
  color: #666;
}

.votenum {
  width: 92%;
  height: 130rpx;
  background: pink;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
}

.votenum>view {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  text-align: center;
  color: #fff;
}

.text {
  font-size: 28rpx;
}

.vote-detail{
  width: 92%;
  height: 300rpx;
  background: #fff;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  font-size: 28rpx;
  color: #666;
}

.vote-detail>view {
  padding: 0rpx 20rpx;
}

.vote-detail image {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 10rpx;
}

.search {
  width: 92%;
  height: 100rpx;
  display: flex;
  margin: 0 auto;
  padding: 40rpx 0;
}

input {
  width: 70%;
  height: 100%;
  background: #fff;
  font-size: 28rpx;
  padding: 0rpx 20rpx
}

.icon {
  width: 30%;
  background: pink;
}

.icon image {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  left: 65rpx;
  top: 25rpx;
}

.list{
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: space-around
}
.list-item{
  padding: 20rpx 20rpx;
  background: #fff;
  color: #999
}
.list-item image{
  width:100%;
  height: 330rpx
}
.vote-img text{
  width: 116rpx;
  height: 40rpx;
  background:#999;
  display: block;
  text-align: center;
  color: #fff;
  line-height: 40rpx;
  position: relative;
  bottom:336rpx;
  opacity: 0.6
}
.list-item button{
  width: 294rpx;
  height: 70rpx;
  background: pink;
  line-height: 70rpx;
  color: #fff;
  border-radius: 0;
  margin-top:20rpx;
  margin-bottom: 20rpx
}