/* pages/order-detail/order-detail.wxss */
page{
  background: #f2f2f2;
  padding-bottom: 40rpx
}
.status {
  padding: 20rpx 20rpx;
  border: 1rpx solid #ececec;
}

.status image {
  width: 70rpx;
  height: 80rpx;
}

.status text {
  font-size: 32rpx;
  font-weight: 600;
  position: relative;
  top: -30rpx;
  left: 20rpx;
}

.add-con {
  padding: 20rpx 0;
  background: #f2f2f2;
}

.add-list {
}

.add-item {
  background: #fff;
  margin: 0 auto;
  width: 100%;
  display: flex;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}

.left {
  width: 100%;
}

.name {
  margin-right: 278rpx;
}

.call {
}

.origin {
  width: 70rpx;
  height: 10rpx;
  padding: 0rpx 10rpx;
  border: 1px solid #ba352e;
  color: #ba352e;
  border-radius: 10rpx;
}

.add-address {
  position: fixed;
  bottom: 0;
  border: 1px solid #ba352e;
  color: #ba352e;
  width: 95%;
  margin-left: 2.5%;
}

.orderListDetails {
  background: #fff;
  padding: 0 0 20rpx 0;
  display: flex;
  height: 200rpx;
  border-bottom: 1px solid #f3f3f3;
}

.orderListDetails .productImg {
  flex: 1;
  height: 180rpx;
  width: 120px;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.orderListDetails .productImg image {
  width: 100px;
  height: 90%;
}

.orderListDetails .productInfo {
  flex: 4;
  margin: 40rpx 10px 20px 30rpx;
  font-size: 15px;
}

.orderListDetails .productInfo .productTitle {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  display: -webkit-box;
  padding: 20rpx 0 0 0;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10px;
}

.productCount {
  height: 80rpx;
  line-height: 80rpx;
  background: #fff
}

.productCount>view {
  float: right;
  margin-right: 30rpx;
  color: #ba352e;
  font-size: 32rpx;
}

.productInfo navigator {
  width: 100rpx;
  height: 20rpx;
  line-height: 20rpx;
  padding: 10rpx 10rpx;
  border: 1px solid #ba352e;
  color: #ba352e;
  border-radius: 90rpx;
  text-align: center;
  font-size: 24rpx;
  float: right;
}

.info-list {
  margin-top: 20rpx;
}

.item {
  padding: 20rpx 20rpx;
  border: 1px solid #f3f3f3;
  font-size: 28rpx;
  background: #fff
}
.item text:first-child{
  float: left
}
.item>view{
color: #999;
float: right
}
.fx{
  color: #000!important;
  font-weight: 800
}
button{
  outline: none;
  border-radius: 0;
  font-size: 32rpx;
  color: #ba352e;
  background: #fff
}
.order-info{
  font-size: 24rpx;
  color: #999;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 180rpx;
  padding: 20rpx 0;
  background: #fff;
  margin: 20rpx 0
}
.order-info text{
  padding: 0 20rpx
}