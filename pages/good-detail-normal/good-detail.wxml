<view class="chartfix clear">
  <navigator url='/pages/storeindex/storeindex' open-type='switchTab' class="home" style="box-shadow: inset -1px 0 0 #ececec" hover-class='none'>
    <image src="http://image.xmihsh.com/upload/logo/gouwuche.png"></image>
    <view class="span">首页</view>
  </navigator>
  <view class="talk" style="box-shadow: inset -1px 0 0 #ececec">
    <image src="http://image.xmihsh.com/upload/logo/gouwuche.png"></image>
    <view class="span">客服</view>
  </view>
  <navigator url='../chart/chart' class="chartcar">
    <image src="http://image.xmihsh.com/upload/logo/gouwuche.png"></image>
    <view class="span">购物车</view>
  </navigator>
  <view class="span orange clear" data-type="1" id="flip" bindtap='addMyCart'>加入购物车</view>
  <view class="span red clear" data-type="0" id="flip2" bindtap='translatex'>立即购买</view>
</view>

<!-- 商品信息选择弹出框 -->
<view id="panel" hidden='{{hiddenName}}'>
  <view class="ti clear" style='height:120rpx;'>
    <view class="infoimg clear">
      <image src="{{domainB}}{{goodsPic}}" alt=""></image>
      <view class="infow">
        <view class="h1">¥{{priceSum}}</view>
        <view class="h1" style='color:#6c6c6c;margin-top:4rpx;margin-bottom:4rpx'>库存{{goodsContent.goodsStorage}}{{goodsContent.goodsSpecName}}</view>
        <view class="h3">已选:{{num}}{{goodsContent.goodsSpecName}}</view>
      </view>
    </view>
    <view id="shut">
      <image src="http://image.xmihsh.com/upload/logo/shut.png" data-type="3" alt="" bindtap='translatex'></image>
    </view>
  </view>
  <view class="colorch" style='height:120rpx;'>
    <view class="span">规格</view>
    <view class="color-con clear">
      <button>{{goodsContent.goodsSpecName}}</button>
    </view>
  </view>
  <view class="numb clear">
    <strong>数量</strong>
    <view class="stepper">
      <!-- 减号 -->
      <text class="{{minusStatus}}" bindtap="bindMinus">-</text>
      <!-- 数值 -->
      <input type="number" bindchange="bindManual" value="{{num}}" />
      <!-- 加号 -->
      <text class="normal" bindtap="bindPlus">+</text>
    </view>
  </view>
  <navigator open-type="redirect">
    <!-- 购买 -->
    <button wx:if="{{type == 0}}" catchtap='queryOrder' class="qd">确定</button>
    <!-- 购物车 -->
    <button wx:if="{{type == 1}}" catchtap='addCar' class="qd">确定-车</button>
  </navigator>

</view>

