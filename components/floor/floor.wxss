/* components/floor/floor.wxss */

.container {
  background: #ececec;
}

.banner image {
  width: 100%;
  height: 290rpx;
}

.goods-list {
  margin: 20rpx 0;
}

.goods-list navigator {
  width: 100%;
  height: 280rpx;
  margin: 4px 0;
  background: #fff;
}

.good-img {
  width: 280rpx;
  height: 280rpx;
  float: left;
}

.good-info {
  float: left;
  width: 450rpx;
  padding: 0rpx 10rpx;
}

.good-info image {
  width: 65rpx;
  height: 65rpx;
  float: right;
}

.title {
  font-size: 32rpx;
  display: block;
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis
}

.tag {
  font-size: 24rpx;
  color: #ba352e;
  padding: 10rpx 0;
}

label {
  border: 1px solid #ba352e;
  width: 40rpx;
  height: 40rpx;
  border-radius: 90rpx;
  display: inline-block;
  text-align: center;
  margin-right: 10rpx;
}

.left {
  float: left;
}

.price {
  font-size: 36rpx;
  color: #ba352e;
  display: block;
}

.evaluate {
  font-size: 24rpx;
  color: #666;
}

.bottom {
  padding: 20rpx;
}
