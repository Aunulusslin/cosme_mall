/* components/cart/cart.wxss */

.cart-box {
  padding-bottom: 100rpx;
}

.cart-list {
  position: relative;
  padding: 20rpx 20rpx 20rpx 285rpx;
  height: 265rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.cart-list .cart-pro-select {
  position: absolute;
  left: 20rpx;
  top: 90rpx;
  width: 45rpx;
  height: 45rpx;
}

.cart-list .cart-thumb {
  position: absolute;
  top: 20rpx;
  left: 85rpx;
  width: 185rpx;
  height: 185rpx;
}

.cart-list .cart-pro-name {
  display: inline-block;
  width: 300rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  overflow: hidden;
}

label {
  font-size: 24rpx;
  display: inline-block;
  margin: 4rpx 4rpx;
  padding: 0rpx 8rpx;
  border-radius: 6rpx;
  /* height: 20rpx; */
  border: 1rpx solid #ba352e;
  color: white;
  background: #ba352e;
}

label:nth-child(2) {
  color: #ba352e;
  background: white;
}

.cart-list .cart-pro-price {
  /* display: inline-block; */
  float: right;
  height: 105rpx;
  line-height: 50rpx;
  color: rgb(218, 20, 53);
}

.cart-list .cart-count-box {
  position: absolute;
  left: 285;
  bottom: 100rpx;
  width: 250rpx;
  height: 80rpx;
}

.cart-list .cart-count-box text {
  display: inline-block;
  line-height: 80rpx;
  text-align: center;
}

.cart-count-down, .cart-count-add {
  font-size: 44rpx;
  width: 50rpx;
  height: 100%;
}

.cart-count-num {
  width: 150rpx;
}

.cart-del {
  position: absolute;
  right: 20rpx;
  bottom: 100rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 44rpx;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx 0 20rpx;
  box-sizing: border-box;
  background: #fff;
  color: #333;
}

.total-select {
  position: absolute;
  left: 20rpx;
  top: 25rpx;
  width: 45rpx;
  height: 45rpx;
  /* float: left; */
}

.order-icon {
  float: right;
  /* top: 25rpx; */
  width: 50%;
  /* height: 45rpx; */
}

.order-icon image, .order-icon navigator {
  display: block;
  width: auto;
  height: auto;
}

.cart-toatl-price {
  float: left;
  color: #ba352e;
  width: 120rpx;
  margin-left: 20rpx;
}

.cart-footer text {
  float: left;
  margin-left: 50rpx;
}

button {
  width: 94%;
  display: block;
  /* float: left; *//* padding: 20rpx 92rpx; */
  border-radius: 8rpx;
  background: #ba352e;
  color: white;
  font-size: 32rpx;
  /* margin: -8rpx 0; */
}

navigator:visited {
  background: red;
}

.cart-no-data {
  padding: 40rpx 0;
  color: #999;
  text-align: center;
}

.specifications {
  font-size: 24rpx;
  color: #999;
}

.Discount {
  position: relative;
  top: 40px;
  width: 640rpx;
  background: #ececec;
  border-radius: 10rpx;
  z-index: 111;
  padding: 20rpx 0;
  left:-200rpx
}
.Discount{
  font-size: 24rpx
}
.Full-reduction{
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  background: rgb(247, 216, 216);
  height: 70rpx;
}
.Full-reduction text{
  font-size: 28rpx;
  color: #333
}
